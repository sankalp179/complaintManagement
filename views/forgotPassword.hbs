<!DOCTYPE html>
<html lang="en">

<head>
    {{>head}}
</head>

<body>
    {{>navbar}}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-5 mx-auto">
                <div class="card mt-5">
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <p class="lead text-center">Forgot Password</p>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" id="email" placeholder="Your Email Address">
                            </div>
                            <div class="form-group">
                                <label for="mobile">Mobile Number</label>
                                <input type="number" class="form-control no-spinner" id="mobile" placeholder="Your Mobile Number">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn-rounded btn btn-primary form-control">Submit</button>
                            </div>
                            <div class="form-group">
                                <p class="text-center text-secondary">
                                    <small>Have a Password ?
                                        <a href="./login">Log In</a>
                                    </small>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
    {{> js_scripts}}
</body>

</html>